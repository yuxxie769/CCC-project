version: '3'

services:

    backend:
        build: ./
        image: ccc-project/backend
        environment:
            APP_SERVER_PORT: {{ APP_SERVER_PORT }}
            COUCHDB_HOST: {{ COUCHDB_HOST }}
        ports:
            - {{ APP_SERVER_PORT }}:{{ APP_SERVER_PORT }}
        command: flask run --host=0.0.0.0

    frontend:
        build: ./frontend
        image: ccc-project/frontend
        environment:
            REACT_APP_PORT: {{ REACT_APP_PORT }}
        ports:
            - 8080:{{ REACT_APP_PORT }}
        stdin_open: true
        links:
            - backend
        command: npm run serve
        
